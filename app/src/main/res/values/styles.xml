<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/md_green_600</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/md_green_600</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/md_green_600</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="android:textColor">@color/md_blue_grey_900</item>

    </style>

    <!-- Other Button in Header for CardView-->
    <style name="card.header_button_base.other">
        <item name="android:background">@drawable/card_menu_button_other_add</item>
    </style>

    <style name="days_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/circle_day_button</item>
        <item name="android:textColor">@color/color_text_days_button</item> <!-- How to specify different color for different state? -->
        <!-- more stuff -->
    </style>

    <style name="text_dialog" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_text_message_dialog</item>
    </style>

    <style name="checkmark_toggle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/circle_checkmark_button</item>
    </style>

</resources>
