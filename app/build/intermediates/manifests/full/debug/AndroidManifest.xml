<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uet.beman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.uet.beman.common.BM_Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.uet.beman.login.BM_ActivityAdvertisment"
            android:label="BeMan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uet.beman.activity.BM_ActivityMain"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.uet.beman.login.BM_BeMenMode"
            android:label="@string/title_activity_bm__be_men_mode"
            android:parentActivityName="com.uet.beman.activity.BM_ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.BM_ActivityMain" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.uet.beman.login.BM_GirlMode"
            android:label="@string/title_activity_bm__girl_mode"
            android:parentActivityName="com.uet.beman.activity.BM_ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.BM_ActivityMain" />
        </activity>
        <activity
            android:name="com.uet.beman.login.BM_WrongPass"
            android:label="@string/title_activity_bm__wrong_pass"
            android:parentActivityName="com.uet.beman.activity.BM_ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.BM_ActivityMain" />
        </activity>
        <activity
            android:name="com.uet.beman.activity.BM_ActivityShowSchedule"
            android:label="@string/title_activity_bm__activity_show_schedule"
            android:parentActivityName="com.uet.beman.activity.BM_ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.BM_ActivityMain" />
        </activity>

        <receiver
            android:name="com.uet.beman.support.BM_BroadcastReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.uet.beman.SMS_SENT" />
                <action android:name="com.uet.beman.SMS_DELIVERED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.uet.beman.activity.BM_ActivityMessageList"
            android:label="@string/title_activity_activity_message_list"
            android:parentActivityName="com.uet.beman.activity.BM_ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uet.beman.activity.BM_ActivityMain" />
        </activity>
        <activity
            android:name="com.uet.beman.common.BM_ActivitySetting"
            android:label="@string/title_activity_bm__activity_setting"
            android:parentActivityName="com.uet.beman.activity.BM_ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uet.beman.activity.BM_ActivityMain" />
        </activity>
        <activity
            android:name="com.uet.beman.login.BM_ActivityLogin"
            android:label="@string/title_activity_bm__activity_login"
            android:parentActivityName="com.uet.beman.login.BM_ActivityAdvertisment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uet.beman.login.BM_ActivityAdvertisment" />
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>