<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_yellow_500"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:id="@+id/layout_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/fragment_messagelist_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:text="@string/line_fragment_message_list" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_text_size_body_2_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line_fragment_message_list1"
                android:textSize="@dimen/abc_text_size_body_2_material" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_text_size_headline_material" />

            <ScrollView
                android:id="@+id/scroll_view_message_list"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_morning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_noon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_night"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_eat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_miss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <it.gmariotti.cardslib.library.view.CardView
                        android:id="@+id/card_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="35dp"
            android:layout_below="@id/layout_number">


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>