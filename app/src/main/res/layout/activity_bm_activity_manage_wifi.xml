<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/text_view_home_wifi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/switch_home_wifi"
        android:layout_toStartOf="@+id/switch_home_wifi"
        android:onClick="manageHomeWifi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_home_wifi"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/text_view_home_wifi"
        android:layout_alignLeft="@+id/switch_work_wifi"
        android:layout_alignStart="@+id/switch_work_wifi"
        android:singleLine="true"
        android:editable="false"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work"
        android:id="@+id/text_view_work_wifi"
        android:layout_below="@+id/text_view_home_wifi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/switch_work_wifi"
        android:layout_toStartOf="@+id/switch_work_wifi"
        android:onClick="manageWorkWifi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_work_wifi"
        android:layout_alignTop="@+id/text_view_work_wifi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/text_view_work_wifi"
        android:layout_toRightOf="@+id/text_view_girl_wifi"
        android:layout_toEndOf="@+id/text_view_girl_wifi"
        android:singleLine="true"
        android:editable="false"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girl&apos;s house"
        android:id="@+id/text_view_girl_wifi"
        android:layout_below="@+id/text_view_work_wifi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="manageGirlHouseWifi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_girl_wifi"
        android:layout_alignTop="@+id/text_view_girl_wifi"
        android:layout_toRightOf="@+id/text_view_girl_wifi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/text_view_girl_wifi"
        android:singleLine="true"
        android:editable="false"
        android:textSize="18dp" />
</RelativeLayout>